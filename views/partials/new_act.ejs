<script>
  function start()
  {
    $('[data-toggle="datepicker"]').datepicker();
  }
  window.onload = start();
</script>

<div class="modal fade" id="iniciar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">




      </div>





      <!-- Begin # DIV Form -->
      <div id="div-forms">


        <!-- Begin | Register Form -->
        <form id="register-vol">

          <div class="modal-body">

            <div id="div-voluntario-msg">
              <center>
                <span id="text-voluntario-msg">Nova Atividade</span>
              </center>
            </div>

            <div class="form-group">

              <select class="form-control button" id="sortPrice" style="float:right">
                                <option>Cliente</option>
                  <% for (var c of clients) { %>
                                    <option value="<%= c.id_cliente %>">
                                        <%= c.nome_cliente%>
                                    </option>
                                    <%}%>
                            </select>

            </div>


            <div class="form-group">
              <select class="form-control button" id="sortPrice" style="float:left">
                                <option>users</option>
                                <% for (var u of users) { %>
                                    <option value="<%= u.id_utilizador %>">
                                        <%= u.nome_utilizador %>
                                    </option>
                                    <%}%>
                            </select>

            </div>




            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="Enter email">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>


          </div>
          <div class="modal-footer">
            <div>
              <button type="submit" class="btn btn-primary btn-lg btn-block">Registar</button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>



</div>

<div class="modal fade" id="new-to-do" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">




      </div>

      <!-- Begin # DIV Form -->
      <div id="div-forms">


        <!-- Begin | Register Form -->
        <form id="new-todo">

          <div class="modal-body">

            <div id="div-voluntario-msg">
              <center>
                <span id="text-voluntario-msg">Nova Tarefa</span>
              </center>
            </div>
            <style>
              label {
                color:black;
                display: block;
                float: left;
              }

              .holder .form-group {
                display: inline-flex;
                width: 50%;
                padding-right: 5px;
                padding-left: 5px;
                padding-bottom: 10px;
              }

              .holder {
                min-height: 100%;
                margin-top: 10px;
                margin-bottom: 10px;
              }
            </style>
            <div class="form-group">
              <input type="text" name="titulo" class="form-control" id="titulo" placeholder="Nome da Atividade">
            </div>


            <div id="first" class="holder">
              <div class="form-group" style="float:right">
                <select class="form-control button" id="client" name="cliente">
					<option>Cliente</option>
					<% for (var c of clients) { %>
					    <option value="<%= c.id_cliente %>">
						<%= c.nome_cliente%>
					    </option>
					    <%}%>
				    </select>

              </div>

              <div class="form-group" style="float:left">
                <select class="form-control button" id="user" name="user" style="float:left">
					<option>users</option>
					<% for (var u of users) { %>
					    <option value="<%= u.id_utilizador %>">
						<%= u.nome_utilizador %>
					    </option>
					    <%}%>
				    </select>

              </div>
            </div>


            <div class="holder">

              <div class="form-group" style="float:left">
                <select class="form-control button" id="tipo" name="tipo">
					<option>Tipo</option>
					<% for (var t of tipos) { %>
					    <option value="<%= t.nome %>">
						<%= t.nome %>
					    </option>
					    <%}%>
				    </select>

              </div>




              <div class="form-group" style="float: right">
                <input type="text" name="subtipo" class="form-control" id="subtipo" placeholder="Sub-tipo">
              </div>


            </div>
            <div class="form-group">
              <textarea rows="4" name="descricao" cols="5" class="form-control" id="descricao"
                placeholder="Descrição da Atividade"></textarea>
            </div>
            <div class="form-group">
              <label for="data">Data Limite</label>
              <input type="date" id="data" name="dataLimite">
            </div>
          </div>
          <div class="modal-footer">
            <div>
              <button type="submit" class="btn btn-primary btn-lg btn-block">Guardar</button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>



</div>
